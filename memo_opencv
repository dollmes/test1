git clone https://github.com/opencv/opencv.git -b 3.2.0
git clone https://github.com/opencv/opencv_contrib.git -b 3.2.0
cd opencv
mkdir build
cd build

cmake -DCMAKE_BUILD_TYPE=RELEASE -DOPENCV_GENERATE_PKGCONFIG=ON -DCMAKE_INSTALL_PREFIX=/usr/local -DOPENCV_EXTRA_MODULES_PATH=../../opencv_contrib/modules ..

make package
